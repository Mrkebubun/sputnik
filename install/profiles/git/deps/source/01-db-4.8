#!/bin/bash

SOURCE=http://download.oracle.com/berkeley-db/db-4.8.30.tar.gz
SELF=`readlink -f $0`

check()
{
    /sbin/ldconfig -p | grep libdb-4.8.so
}

install()
{
    cd /usr/local/src
    wget $SOURCE
    tar -zxvf db-4.8.30.tar.gz
    cd db-4.8.30

    TAG="PATCH"
    LINE=`grep -n "# $TAG" $SELF | cut -d':' -f1`
    tail -n $LINE $SELF | patch -p1
    cd build_unix
    ../dist/configure --prefix=/usr/local \
                        --mandir=\$${prefix}/share/man \
                        --localstatedir=/var \
                        --sysconfdir=/etc \
                        --libdir=/usr/local/lib \
                        --libexecdir=/usr/local/lib \
                        --enable-cxx \
                        --enable-compat185 \
                        --with-tcl=/usr/lib \
                        --enable-tcl \
                        --enable-test \
                        --with-pic
    make
    make install

    ldconfig
}

case $1 in
    check)
        check
        ;;
    install)
        install
        ;;
    *)
        echo "usage: $0 check|install"
        ;;
esac

exit

