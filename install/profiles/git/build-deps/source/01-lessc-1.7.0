#!/bin/sh

check()
{
    [ -x /usr/local/bin/lessc ] && /usr/local/bin/lessc -v | grep 1.7.0

}

install()
{
    /usr/local/sbin/npm install -g less@1.7.0
}

case $1 in
    check)
        check
        ;;
    install)
        install
        ;;
    *)
        echo "usage: $0 check|install"
        ;;
esac

