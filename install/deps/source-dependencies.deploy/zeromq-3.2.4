#!/bin/sh

SOURCE=http://download.zeromq.org/zeromq-3.2.4.tar.gz

check()
{
    /sbin/ldconfig -p | grep libzmq.so.3
}

install()
{
    cd /usr/local/src
    wget $SOURCE
    tar -zxvf zeromq-3.2.4.tar.gz
    cd zeromq-3.2.4
    make
    make install
    ldconfig
}

case $1 in
    check)
        check
        ;;
    install)
        install
        ;;
    *)
        echo "usage: $0 check|install"
        ;;
esac

