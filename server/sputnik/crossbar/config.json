{
    "controller": {}, 
    "workers": [
        {
            "realms": [
                {
                    "name": "realm1", 
                    "roles": [
                        {
                            "name": "anonymous", 
                            "permissions": [
                                {
                                    "call": true, 
                                    "publish": false, 
                                    "register": false, 
                                    "subscribe": true, 
                                    "uri": "*"
                                }
                            ]
                        }, 
                        {
                            "name": "authenticated", 
                            "permissions": [
                                {
                                    "call": true, 
                                    "publish": false, 
                                    "register": false, 
                                    "subscribe": true, 
                                    "uri": "*"
                                }
                            ]
                        }
                    ],
                    "classes":["timeservice.TimeService"]
                }
            ], 
            "transports": [
                {
                    "endpoint": {
                        "port": 8000, 
                        "type": "tcp"
                    }, 
                    "paths": {
                        "/": {
                            "directory": "static", 
                            "type": "static"
                        }, 
                        "ws": {
                            "auth": {
                                "mozilla_persona": {
                                    "role": {
                                        "type": "static", 
                                        "value": "authenticated"
                                    }
                                },
                                "options":{"debug":"true"}
                            }, 
                            "cookie": {}, 
                            "type": "websocket", 
                            "url": "ws://sputnikmkt.com:8000/ws"
                        }
                    }, 
                    "type": "web"
                }
            ], 
            "type": "router"
        }
    ]
}
