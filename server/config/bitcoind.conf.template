[program:bitcoind]
command = /usr/local/sbin/bitcoind -conf=${conf}/bitcoin.conf -blocknotify="/usr/bin/curl 'http://localhost:8282/bitcoin'"
autorestart = true
exitcodes = 0
user = ${bitcoin_user}
redirect_stderr = true
stdout_logfile = ${logs}/%(program_name)s.log
stdout_logfile_backups = 3
directory = ${bitcoin_root}
environment = HOME="${bitcoin_root}"

